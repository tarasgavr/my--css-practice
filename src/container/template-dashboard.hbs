<div class="grid-col2-row2">
  <aside class="aside grid-extrow flex-column gap-24">
    <h2 class="aside-text text-white">Sidebar</h2>
    <hr class="divider" />
    <div class="flex-column gap-12">
      {{#each links}}
        <a href="#" class="link-button aside-button">
          <img src="{{img}}" alt="{{title}}">
          <span class="text-white">{{title}}</span>
        </a>
      {{/each}} <!-- end of links -->
    </div>
  </aside>
  <header class="bg-white header flex-justify-center">
    <div class="center1300 header-form">
      <div class="flex-row" style="position: relative;">       
        <input type="text" placeholder="Search" class="input form-input">
        <img src="/img/svg/ic_baseline-search.svg" alt="search" class="header-icon search-icon">
        <img src="/img/svg/mingcute_settings-6-line.svg" alt="settings" class="header-icon settings-icon bg-blue-icon">
      </div>
      <div class="flex-row gap-20" style="align-items: center;">
        {{#each signs}}
          <img src="{{img}}" alt="{{title}}" class="header-icon form-sign">
        {{/each}} <!-- end of signs -->
      </div>
    </div>
  </header>
  <main class="main bg-light-gray flex-justify-center">
    <div class="center1300 flex-column gap-40">
      <div class="grid-wrapper bg-white grid-col3-row2 gap-24">
        {{#each cards}}
          <div class="{{#if big}}grid-extrow{{/if}} flex-column card">
            <img src="{{img}}" alt="{{title}}" class="card-icon">
            <h4 class="card-price">{{price}}</h4>
            {{#if badge}}
              <img src="{{badge}}" alt="badge" class="card-badge">
            {{/if}}
            <h4 class="card-title">{{title}}</h4>
          </div>
        {{/each}} <!-- end of cards -->
      </div>
      <div class="listform-wrapper flex-row gap-40">
        <div class="listform-wrapper flex-column gap-24">
          <h4 class="list-title">Purchase list</h4>
          {{#each list}}
            <hr class="divider" />
            <div class="grid-col4 gap-20">
              <div class="flex-column gap-12">
                <div>{{order_id}}</div>
                <time>{{order_date}}</time>
              </div>
              <div class="flex-column gap-12">
                <div>{{product_title}}</div>
                <div>{{product_type}}</div>
              </div>
              <div class="flex-column gap-12">
                <div>{{price}}</div>
                <div class="{{#if paid}}clgreen{{else}}clred{{/if}}">{{order_status}}</div>
              </div>
              <div class="flex-column gap-12">
                <div>{{user_role}}</div>
                <div>{{user_email}}</div>
              </div>
            </div>
          {{/each}} <!-- end of list -->
        </div>
        <div class="flex-column gap-24">
          <h4 class='form-title'>Payment</h4>
          <hr class="divider" />
          <div class="flex-column gap-12">
            {{#each radios}}
              <input type="radio" id="radio-{{id}}" name="pay-method" class="pay-with-radio">
              <label class="pay-with-label" for="radio-{{id}}">{{label}}</label>
            {{/each}} <!-- end of radios -->
          </div>
          <div class="grid-col2-row2 gap-24">
            {{#each inputs}}
            <div class="flex-column gap-8">
              <label class="card-info-label">{{this}}</label>
              <input type="text" class="card-info-input">
            </div>
            {{/each}} <!-- end of inputs -->
          </div>
          <hr class="divider" />
          <div class="grid-col2 gap-24">
            {{#each selects}}
            <div class="flex-column gap-8">
              <label class="place-info-label">{{this}}</label>
              <select class="place-info-select">
                <option value="Choose..." selected></option>
                <option value="USA"></option>
                <option value="Ukraine"></option>
                <option value="Spain"></option>
              </select>
            </div>
            {{/each}} <!-- end of selects -->
          </div>
          <hr class="divider" />
          <input type="submit" value="Continue to checkout" class='form-submit'>
        </div>
      </div>
    </div>
  </main>
</div>