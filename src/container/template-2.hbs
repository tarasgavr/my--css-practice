{{!-- сторінка --}}
<div class="page">
   <div class="page-content">
		{{!-- шапка --}}
		<header class="template1-header">
			{{> icon letter='B' }}
			<nav class="my-nav">
				{{> template1-nav list=header }}
			</nav>
		</header>
		{{!-- шапка --}}
		{{!-- основна частина --}}
		<main>
			<div class="hero-block">
				{{#with hero}}
					<h2 class='hero-title'>{{title}}</h2>
					<p class='hero-text'>{{text}}</p>
					<a href="{{button.url}}" class="hero-button">{{button.text}}</a>				  
				{{/with}} <!-- end of hero -->
			</div>
			<div class="preview-block">
					{{#each preview}}
							<div class='preview-card'>
								<div class='preview-card-body'>
									<span class="preview-date">{{date}}</span>
									{{#each category}}
										<span class="preview-category">{{text}}</span>
									{{/each}} <!-- end of category -->
									<strong>{{title}}</strong>
									<p>{{text}}</p>
							    </div>
							</div>
					{{/each}} <!-- end of preview -->
			</div>
		</main>
		{{!-- основна частина --}}
		{{!-- підвал --}}
		<footer class="template1-footer">
			<div class="b-copyright">
				{{> icon letter='B' }}
				<div class="template1-footerText">
					Copyright 2023
				</div>
			</div>
			{{#each footer}}
			<div class="template1-footerHeaders">
				<div class="template1-footerHeader">
					{{title}}
				</div>
				<div class="template1-footerLinksText">
					{{> template1-nav list=links isvertical=true }}
				</div>
			</div>
			{{/each}} <!-- end of footer -->
		</footer>
		{{!-- підвал --}}
	</div>
</div>